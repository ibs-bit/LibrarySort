CXX = g++
CXXFLAGS = -g -Wall -Wextra

.PHONY : test

main: LibrarySort


LibrarySort : main.cpp Tasks.o LinkedList.o Node.o Book.o
	$(CXX) $(CXXFLAGS) -o $@ $^

Tasks.o : Tasks.cpp Tasks.h LinkedList.o Node.o Book.o
	$(CXX) $(CXXFLAGS) -c $^

LinkedList.o : LinkedList.cpp LinkedList.h Node.o Book.o
	$(CXX) $(CXXFLAGS) -c $^

Node.o : Node.cpp Node.h Book.o
	$(CXX) $(CXXFLAGS) -c $^

Book.o : Book.cpp Book.h
	$(CXX) $(CXXFLAGS) -c $<


.PHONY : cleanTest
cleanTest :
	rm *.o *.h.gch TestCases.exe
